<header>
    <input type="text" id="url" placeholder="Arepita ProMax">
    <button onclick="ir()">Ir</button>
</header>

<iframe id="ventana" src=""></iframe>

<script>
// Abrir DuckDuckGo autom√°ticamente al cargar
window.onload = function() {
    document.getElementById('ventana').src = "https://duckduckgo.com";
};

function ir() {
    let input = document.getElementById('url').value.trim();
    if (!input) return;

    // Si empieza con http o https, abrir como URL
    if (!input.startsWith('http')) {
        input = 'https://' + input;
    }

    document.getElementById('ventana').src = input;
}
</script>

